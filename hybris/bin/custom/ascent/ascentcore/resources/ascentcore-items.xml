<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="items.xsd">

    <collectiontypes>
        <collectiontype code="GenderList" elementtype="Gender" autocreate="true" generate="true" type="list"/>
        <collectiontype code="SwatchColorSet" elementtype="SwatchColorEnum" autocreate="true" generate="true" type="set"/>
        <collectiontype code="ProductList" elementtype="Product" autocreate="true" generate="true" type="list"/>
    </collectiontypes>

    <enumtypes>
        <enumtype generate="true" code="SwatchColorEnum" autocreate="true" dynamic="true">
            <value code="BLACK"/>
            <value code="BLUE"/>
            <value code="BROWN"/>
            <value code="GREEN"/>
            <value code="GREY"/>
            <value code="ORANGE"/>
            <value code="PINK"/>
            <value code="PURPLE"/>
            <value code="RED"/>
            <value code="SILVER"/>
            <value code="WHITE"/>
            <value code="YELLOW"/>
        </enumtype>
    </enumtypes>

    <itemtypes>

        <!-- Add your item definitions here -->


        <!-- TypeGroups are for structure of this file only -->

        <typegroup name="Apparel">
            <itemtype code="ApparelProduct" extends="Product"
                      autocreate="true" generate="true"
                      jaloclass="com.pwc.demo.core.jalo.ApparelProduct">
                <description>Base apparel product extension that contains additional attributes.</description>
                <attributes>
                    <attribute qualifier="genders" type="GenderList">
                        <description>List of genders that the ApparelProduct is designed for</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>

            <itemtype code="ApparelStyleVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.pwc.demo.core.jalo.ApparelStyleVariantProduct">
                <description>Apparel style variant type that contains additional attribute describing variant style.
                </description>
                <attributes>
                    <attribute qualifier="style" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color/Pattern of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>

                    <attribute qualifier="swatchColors" type="SwatchColorSet">
                        <description>A normalized color mapping to a standardized front-end navigable name.
                        </description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>

            </itemtype>

            <itemtype code="ApparelSizeVariantProduct" extends="ApparelStyleVariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.pwc.demo.core.jalo.ApparelSizeVariantProduct">
                <description>Apparel size variant type that contains additional attribute describing variant size.
                </description>
                <attributes>
                    <attribute qualifier="size" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Size of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

        <typegroup name="Electronics">
            <itemtype code="ElectronicsColorVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.pwc.demo.core.jalo.ElectronicsColorVariantProduct">
                <description>Electronics color variant type that contains additional attribute describing variant color.
                </description>
                <attributes>
                    <attribute qualifier="color" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>
  <typegroup name="Ascent">
  
		    <itemtype code="ProductSpotlightComponent" generate="true" extends="SimpleCMSComponent" autocreate="true"
			jaloclass="com.pwc.demo.core.jalo.cms2.components.ProductSpotlightComponent">
				<attributes>
					<attribute qualifier="spotlightProducts" type="ProductList">
						<persistence type="property" />
						<modifiers  />
					</attribute>
				</attributes>
			</itemtype>
			<itemtype code="AscentSolutionBannerComponent" generate="true"
				jaloclass="com.pwc.demo.core.jalo.cms2.components.AscentSolutionBannerComponent" extends="BannerComponent" autocreate="true">
				<description>Ascent Solution Banner</description>
			</itemtype>

			<itemtype code="ListBuyNowAction" generate="true" jaloclass="com.pwc.demo.core.jalo.action.ListBuyNowAction" extends="SimpleCMSAction"
				autocreate="true">
				<description>List Buy Now Action</description>
			</itemtype>

			<itemtype code="BuyNowAction" generate="true" jaloclass="com.pwc.demo.core.jalo.action.BuyNowAction" extends="SimpleCMSAction"
				autocreate="true">
				<description>Buy Now Action</description>
			</itemtype>

			<itemtype code="ListTryAction" generate="true" jaloclass="com.pwc.demo.core.jalo.action.ListTryAction" extends="SimpleCMSAction"
				autocreate="true">
				<description>Try Action</description>
			</itemtype>

			<itemtype code="TryAction" generate="true" jaloclass="com.pwc.demo.core.jalo.action.TryAction" extends="SimpleCMSAction"
				autocreate="true">
				<description>Try Action</description>
			</itemtype>
			
			<itemtype code="AbstractOrder" autocreate="false" generate="false">
				<attributes>
					<attribute qualifier="requireCD" type="boolean">
						<description>Require CD</description>
						<persistence type="property" />
					</attribute>
				</attributes>
				</itemtype>
				
				<itemtype code="Subscription" autocreate="false" generate="false">
				<attributes>
					<attribute type="java.lang.Long" qualifier="quantity">
						<description>Quantity</description>
						<persistence type="property" />
					</attribute>
					<attribute type="Currency" qualifier="currency">
						<description>Currency</description>
						<persistence type="property" />
					</attribute>
					<attribute type="java.lang.Double" qualifier="totalPrice">
						<description>Total Price</description>
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>
			
        </typegroup>

    </itemtypes>
</items>
